@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="jumbotron text-center">
    <h1 class="display-4"><strong>@ViewData["Title"]</strong></h1>
    <p class="lead">Welcome to GuardianCyberStore!</p>
</div>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/images/12c.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/12a.jpeg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/12b.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h2>CATEGORIES</h2>
            <ul class="list-group">
            @foreach (var category in Model.Categories)
            {
                <li class="list-group-item">
                    <a href="/Category?id">@category.Name</a>
                </li>
            }
            </ul>
        </div>

        <div class="col-lg-6">
            <h2>PRODUCTS</h2>
            <ul class="list-group">
            @foreach (var product in Model.Products)
            {
                <li class="list-group-item">
                    <a href="/Products?id=@product.Id">@product.Name</a>
                </li>
            }
            </ul>
        </div>
    </div>
</div>
