@page
@model GuardianCyberStore.Pages.UpdateProductModel

<h2>Update Product</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" asp-for="Product.Name" class="form-control" id="Name" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" asp-for="Product.Description" class="form-control" id="Description" />
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" step="0.01" asp-for="Product.Price" class="form-control" id="Price" />
    </div>
    <div class="form-group">
        <label for="ProductImage">Product Image</label>
        <input type="text" asp-for="Product.ProductImage" class="form-control" id="ProductImage" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
